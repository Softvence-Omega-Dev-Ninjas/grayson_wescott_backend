model FileInstance {
  id String @id @default(uuid())

  filename         String // Stored filename (can be S3 key or generated UUID name)
  originalFilename String // Original filename uploaded by user
  path             String // S3 object key, e.g., "videos/uuid.mp4"
  url              String // Public or pre-signed S3 URL
  fileType         FileType @default(ANY)
  mimeType         String
  size             Int // File size in bytes

  privateMessage PrivateMessage[]
  contactForm    ContactForm[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("file_instances")
}

enum FileType {
  IMAGE
  DOCS
  LINK
  DOCUMENT
  ANY
  VIDEO
  AUDIO
}
